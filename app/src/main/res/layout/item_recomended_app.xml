<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px24"
                android:padding="@dimen/px12"
                android:background="@drawable/sel_rcyview_item"
                android:focusable="true"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recommended_app_icon"
        android:layout_width="@dimen/h_100"
        android:layout_height="@dimen/h_100"
        android:layout_marginRight="@dimen/px36"
        android:src="@drawable/icon_app"/>

    <TextView
        android:id="@+id/tv_recommended_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px12"
        android:layout_toRightOf="@id/iv_recommended_app_icon"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/burlywood"
        android:textSize="24sp"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/rat_recommended_app_rating"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_recommended_app_title"
        android:layout_marginLeft="@dimen/px18"
        android:layout_toRightOf="@id/tv_recommended_app_title"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_recommended_app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recommended_app_icon"
        android:layout_toRightOf="@id/iv_recommended_app_icon"
        android:text="大小:19.75MB"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_recommended_app_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recommended_app_icon"
        android:layout_marginLeft="@dimen/px20"
        android:layout_toRightOf="@id/tv_recommended_app_size"
        android:text="更新日期:12-16"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</RelativeLayout>