<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context="com.ppfuns.filemanager.ui.activity.AudioDirActivity">

    <ImageView
        style="@style/TitleStyle"
        android:src="@drawable/music_icon"/>

    <include
        layout="@layout/tip_lay"
        android:focusable="false"/>

    <include layout="@layout/center_tip"/>

    <com.ppfuns.filemanager.view.AutoFocusRecyclerView
        android:id="@+id/recy_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px120"
        android:layout_marginLeft="@dimen/px96"
        android:layout_marginRight="@dimen/px32"
        android:layout_marginTop="@dimen/px230"
        android:focusable="false"/>

</RelativeLayout>
