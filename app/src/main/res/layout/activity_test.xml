<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bj_main"
              android:focusable="false"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp">

    <com.ppfuns.filemanager.view.LrcView
        android:id="@+id/lrc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:afterLineColor="@android:color/secondary_text_light_nodisable"
        app:beforeLineColor="@android:color/primary_text_light_nodisable"
        app:currentLineColor="@color/darkseagreen"
        app:referenceLineColor="@color/Grey_300"
        app:textSize="24sp"/>


</LinearLayout>